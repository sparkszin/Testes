<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_adm_form" model="ir.ui.view">
            <field name="name">adm.form</field>
            <field name="model">adm</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_adm_tree" model="ir.ui.view">
            <field name="name">adm.tree</field>
            <field name="model">adm</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_adm" model="ir.actions.act_window">
            <field name="name">Administração</field>
            <field name="res_model">adm</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    
                </p>
            </field>
        </record>

    </data>

    <menuitem id="adm_root" name="Administração" sequence="100" />

</odoo>