<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_temas_form" model="ir.ui.view">
         	<field name="name">temas.form</field>
         	<field name="model">temas</field>
         	<field name="arch" type="xml">
             	<form>
                 	<sheet>
                     	<group>
                         	<field name="name"/>
							<field name='casos_ids'/>
                     	</group>
                 	</sheet>
             	</form>
         	</field>
     	</record>

        <record id="view_temas_tree" model="ir.ui.view">
         	<field name="name">temas.tree</field>
         	<field name="model">temas</field>
         	<field name="arch" type="xml">
             	<tree>
                 	<field name="name"/>
					<field name='casos_ids'/>
             	</tree>
         	</field>
     	</record>

		<record id="action_temas" model="ir.actions.act_window">
			<field name="name">Crimes</field>
			<field name="res_model">temas</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Ainda n√£o foi registado nenhum crime!
				</p>
			</field>
		</record>

    </data>

    <menuitem id="temas_root" name="Crimes" sequence="100" />
    <menuitem id="temas_item" name="Crimes" parent="registodecasos_root" action="action_temas" sequence="100"/>


</odoo>